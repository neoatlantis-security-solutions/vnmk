{ "rules": {
    "$uid": {
        ".read": false,

        "user": {
            ".write": "auth.uid !== null && $uid == auth.uid",
            "authcode": {
                ".validate": "newData.isString() && newData.val().length < 100"
            },
            "secret": {
                ".validate": "newData.isString() && newData.val().length < 2048"
            },
            "$_": { ".validate": false }
        },
        
        "service": {
            ".write": false,
            "$_": { ".validate": false }
        },

        "$_": { ".validate": false }
    }
} }
